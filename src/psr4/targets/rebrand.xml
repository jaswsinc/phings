<?xml version="1.0" encoding="UTF-8" ?>

  <project name="rebrand">

    <!-- ============================================  -->
    <!-- Rebranding routines. -->
    <!-- ============================================  -->

    <target name="-rebrand" hidden="true">

      <!-- WebSharks Core rebranding. -->

      <if>
        <and>
          <available file="${project.basedir}/src/vendor/composer/autoload_psr4.php" />
          <available resource="${project.basedir}/src/vendor/websharks/core" type="dir" />
        </and>
        <then>
          <echo msg="Rebranding: ${project.basedir}/src/vendor/websharks/core" />

          <reflexive>
            <fileset dir="${project.basedir}/src/vendor/websharks/core" casesensitive="false">
              <include pattern="**/*.php" />
            </fileset>
            <filterchain>
              <replaceregexp>
                <regexp pattern="\b(namespace|use)\s+WebSharks\\Core\b" replace="\1 WebSharks\\Core\\${project_sub_namespace}" modifiers="u" />
              </replaceregexp>
            </filterchain>
          </reflexive>

          <reflexive>
            <fileset dir="${project.basedir}/src/vendor/composer" casesensitive="false">
              <include pattern="autoload_psr4.php" />
            </fileset>
            <filterchain>
              <replaceregexp>
                <regexp pattern="\bWebSharks\\\\Core\b" replace="WebSharks\\\\Core\\\\${project_sub_namespace}" modifiers="u" />
              </replaceregexp>
            </filterchain>
          </reflexive>

          <echo msg="------------------------------------" />
        </then>
        <else>
          <echo msg="N/A: websharks/core is not used in this project." />

          <echo msg="------------------------------------" />
        </else>
      </if>

      <!-- WebSharks WP Core. -->

      <if>
        <and>
          <istrue value="${_is_wp_theme_plugin}" />
          <available file="${project.basedir}/src/vendor/composer/autoload_psr4.php" />
          <available resource="${project.basedir}/src/vendor/websharks/wp-core" type="dir" />
        </and>
        <then>
          <echo msg="Rebranding: ${project.basedir}/src/vendor/websharks/wp-core" />

          <reflexive>
            <fileset dir="${project.basedir}/src/vendor/websharks/wp-core" casesensitive="false">
              <include pattern="**/*.php" />
            </fileset>
            <filterchain>
              <replaceregexp>
                <regexp pattern="\b(namespace|use)\s+WebSharks\\WpCore\b" replace="\1 WebSharks\\WpCore\\${project_sub_namespace}" modifiers="u" />
              </replaceregexp>
            </filterchain>
          </reflexive>

          <reflexive>
            <fileset dir="${project.basedir}/src/vendor/composer" casesensitive="false">
              <include pattern="autoload_psr4.php" />
            </fileset>
            <filterchain>
              <replaceregexp>
                <regexp pattern="\bWebSharks\\\\WpCore\b" replace="WebSharks\\\\WpCore\\\\${project_sub_namespace}" modifiers="u" />
              </replaceregexp>
            </filterchain>
          </reflexive>

          <echo msg="------------------------------------" />
        </then>
        <else>
          <echo msg="N/A: websharks/wp-core is not used in this project." />

          <echo msg="------------------------------------" />
        </else>
      </if>

    </target>

  </project>
