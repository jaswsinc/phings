<?xml version="1.0" encoding="UTF-8" ?>

<project name="js-css">

  <!-- ============================================  -->
  <!-- Clean up the JS/CSS files. -->
  <!-- ============================================  -->

  <target name="-js-css" hidden="true">

    <echo msg="Stripping sourceMappingURL from JS/CSS in: ${project.basedir}" />

    <reflexive>
      <fileset dir="${project.basedir}" casesensitive="false">
        <include pattern="*.js" />
        <include pattern="**/**.js" />
        <include pattern="*.css" />
        <include pattern="**/**.css" />
      </fileset>
      <filterchain>
        <replaceregexp>
          <regexp pattern="\/\*\#\s+sourceMappingURL\=(?:.*?)\*\/" replace="" modifiers="us" />
        </replaceregexp>
      </filterchain>
    </reflexive>

    <echo msg="------------------------------------" />

  </target>

</project>
