<?xml version="1.0" encoding="UTF-8" ?>

  <project>

    <!-- ============================================  -->
    <!-- Releases clipboard copy & details. -->
    <!-- ============================================  -->

    <target name="-releases-clipboard" hidden="true">

      <if>
        <and>
          <contains string="${host.os}" substring="darwin" caseSensitive="false" />
        </and>
        <then>
          <!-- Copy contents to clipboard. -->

          <exec command="pbcopy &lt; '${_tmp_sub_dir}/${project_slug}-releases-clipboard'" checkReturn="true" />

          <!-- Mention the clipboard contents and explain the URLs. -->

          <echo msg="Copied all URLs to clipboard via `pbcopy`. Type: `$ pbpaste` to review." />
          <echo msg="Note: Please keep pro software URLs private. Lite URLs can be shared publicly." />
          <echo msg="These URLs are unique. They contain version-specific details in their file name." />
          <if>
            <and>
              <isFalse value="${_releases_release_type_is_rc}" />
            </and>
            <then>
              <echo />
              <echo msg="~ However, '/latest/' distros are simply updated after each release." />
              <echo msg="  They change only in content. URLs remains the same." />
            </then>
          </if>

          <!-- Run `pbpaste` now to prove that this works and let the operator review. -->
          <echo />
          <exec command="pbpaste" passthru="true" />
        </then>
      </if>

    </target>

  </project>
