<?xml version="1.0" encoding="UTF-8" ?>

  <project name="phpunit">

    <!-- ============================================  -->
    <!-- Run PHPUnit tests via CI server. -->
    <!-- ============================================  -->

    <target name="-phpunit" hidden="true">

      <if>
        <and>
          <isset property="env.CI" />
          <not>
            <isset property="is_lite_build" />
          </not>
          <or>
            <available resource="${project.basedir}/phpunit.xml" type="file" />
            <and>
              <available resource="${project.basedir}/tests/phpunit" type="dir" />
              <available resource="${project.basedir}/tests/includes/phpunit.php" type="file" />
            </and>
          </or>
        </and>
        <then>
          <!-- Run PHPUnit tests via CI server. -->

          <echo msg="Running PHPUnit tests via CI server." />

          <if>
            <and>
              <available resource="${project.basedir}/phpunit.xml" type="file" />
            </and>
            <then>
              <exec executable="/usr/bin/env" dir="${project.basedir}" passthru="true" checkreturn="true">
                <arg value="phpunit" />
              </exec>
            </then>
            <else>
              <exec executable="/usr/bin/env" dir="${project.basedir}" passthru="true" checkreturn="true">
                <arg value="phpunit" />
                <arg value="--debug" />
                <arg value="--stop-on-failure" />
                <arg value="--no-globals-backup" />
                <arg value="--bootstrap=${project.basedir}/tests/includes/phpunit.php" />
                <arg value="${project.basedir}/tests/phpunit" />
              </exec>
            </else>
          </if>

          <echo msg="------------------------------------" />

        </then>

        <else>
          <echo msg="N/A: skipping PHPUnit tests via CI server." />

          <echo msg="------------------------------------" />
        </else>
      </if>

    </target>

  </project>
