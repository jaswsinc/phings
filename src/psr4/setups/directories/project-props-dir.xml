  <project>

    <!-- ============================================  -->
    <!-- Initialize `${project.basedir}/.~build/.properties`. -->
    <!-- ============================================  -->

    <if>
      <and>
        <not>
          <available resource="${project.basedir}/.~build/.properties" type="dir" />
        </not>
      </and>
      <then>
        <mkdir dir="${project.basedir}/.~build/.properties" />
      </then>
    </if>

  </project>
