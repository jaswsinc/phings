<?xml version="1.0" encoding="UTF-8" ?>

  <project>

    <!-- ============================================  -->
    <!-- PHP pattern set. -->
    <!-- ============================================  -->

    <patternSet id="_php_pattern_set">
      <exclude pattern=".~build/**" />
      <exclude pattern="**/.~build/**" />

      <exclude pattern="phings/**" />
      <exclude pattern="**/phings/**" />

      <exclude pattern="vendor/**" />
      <exclude pattern="**/vendor/**" />

      <include pattern="*.php" />
      <include pattern="**/**.php" />

      <include pattern="*.x-php" />
      <include pattern="**/**.x-php" />
    </patternSet>

  </project>
