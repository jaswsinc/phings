<?xml version="1.0" encoding="UTF-8" ?>

<project>

  <!-- ============================================  -->
  <!-- Additional files to ignore when altering files. -->
  <!-- Depends on: `_git_ignore_pattern_set`. -->
  <!-- ============================================  -->

  <patternSet id="_alter_ignore_pattern_set">

    <!-- SASS -->

    <exclude pattern="**.css.map" />
    <exclude pattern="**/**.css.map" />

    <exclude pattern="bourbon/**" />
    <exclude pattern="**/bourbon/**" />

    <!-- Git -->

    <exclude pattern=".gitignore" />
    <exclude pattern=".gitattributes" />
    <exclude pattern=".gitmodules" />
    <exclude pattern=".gitchange" />

    <!-- Assets -->

    <exclude pattern="assets/**" />

    <!-- Build Files -->

    <exclude pattern="phings/**" />

    <exclude pattern=".build.props" />

    <exclude pattern="build-*.xml" />
    <exclude pattern="build.xml" />

    <!-- These are NOT excluded here.
    <exclude pattern=".build.php" />
    <exclude pattern="**/.build.php" />

    <exclude pattern=".build.*.php" />
    <exclude pattern="**/.build.*.php" />
    -->

    <!-- Composer -->

    <exclude pattern="composer.lock" />

  </patternSet>

</project>
