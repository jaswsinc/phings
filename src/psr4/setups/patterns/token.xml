<?xml version="1.0" encoding="UTF-8" ?>

<project>

  <!-- ============================================  -->
  <!-- Token pattern set. -->
  <!-- Depends on: `_alter_ignore_pattern_set`. -->
  <!-- ============================================  -->

  <patternSet id="_token_pattern_set">

    <include pattern="*.php" />
    <include pattern="**/**.php" />

    <include pattern="*.phps" />
    <include pattern="**/**.phps" />

    <include pattern="*.x-php" />
    <include pattern="**/**.x-php" />

    <include pattern="*.js" />
    <include pattern="**/**.js" />

    <include pattern="*.scss" />
    <include pattern="**/**.scss" />

    <include pattern="*.bash" />
    <include pattern="**/**.bash" />

  </patternSet>

</project>
