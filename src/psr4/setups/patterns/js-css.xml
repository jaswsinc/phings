<?xml version="1.0" encoding="UTF-8" ?>

  <project>

    <!-- ============================================  -->
    <!-- JS/CSS pattern set. -->
    <!-- ============================================  -->

    <patternSet id="_js_css_pattern_set">

      <exclude pattern=".~build/**" />
      <exclude pattern="**/.~build/**" />

      <exclude pattern="phings/**" />
      <exclude pattern="**/phings/**" />

      <exclude pattern="vendor/**" />
      <exclude pattern="**/vendor/**" />

      <exclude pattern="bourbon/**" />
      <exclude pattern="**/bourbon/**" />

      <include pattern="*.js" />
      <include pattern="**/**.js" />

      <include pattern="*.json" />
      <include pattern="**/**.json" />

      <include pattern="*.css" />
      <include pattern="**/**.css" />

      <include pattern="*.scss" />
      <include pattern="**/**.scss" />

    </patternSet>

  </project>
