<?xml version="1.0" encoding="UTF-8" ?>

<project>

  <!-- ============================================  -->
  <!-- JS/CSS pattern set. -->
  <!-- Depends on: `_alter_ignore_pattern_set`. -->
  <!-- ============================================  -->

  <patternSet id="_js_css_pattern_set">

    <include pattern="*.ts" />
    <include pattern="**/**.ts" />

    <include pattern="*.js" />
    <include pattern="**/**.js" />

    <include pattern="*.tsx" />
    <include pattern="**/**.tsx" />

    <include pattern="*.jsx" />
    <include pattern="**/**.jsx" />

    <include pattern="*.json" />
    <include pattern="**/**.json" />

    <include pattern="*.json5" />
    <include pattern="**/**.json5" />

    <include pattern="*.css" />
    <include pattern="**/**.css" />

    <include pattern="*.scss" />
    <include pattern="**/**.scss" />

    <include pattern="*.less" />
    <include pattern="**/**.less" />

  </patternSet>

</project>
