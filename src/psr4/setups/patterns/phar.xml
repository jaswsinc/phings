<?xml version="1.0" encoding="UTF-8" ?>

<project>

  <!-- ============================================  -->
  <!-- Pattern-set reference for PHAR files. -->
  <!-- Depends on: `_git_export_ignore_pattern_set`. -->
  <!-- ============================================  -->

  <patternSet id="_phar_pattern_set">

    <!-- Binaries -->

    <exclude pattern="src/vendor/bin/**" />

    <!-- Composer -->

    <exclude pattern="composer.json" />
    <exclude pattern="src/vendor/*/*/composer.json" />

    <exclude pattern="composer.lock" />
    <exclude pattern="src/vendor/*/*/composer.lock" />

  </patternSet>

</project>
