<?xml version="1.0" encoding="UTF-8" ?>

  <project>

    <!-- ============================================  -->
    <!-- Pattern-set reference for lite repo. -->
    <!-- ============================================  -->

    <patternSet id="_lite_repo_pattern_set">
      <exclude pattern=".~**" />
      <exclude pattern="**/.~**" />

      <exclude pattern=".git/**" />
      <exclude pattern="**/.git/**" />

      <exclude pattern=".gitmodules" />
      <exclude pattern="**/.gitmodules" />

      <exclude pattern=".idea/**" />
      <exclude pattern="**/.idea/**" />

      <exclude pattern=".tags" />
      <exclude pattern="**/.tags" />

      <exclude pattern="assets/**" />
      <exclude pattern="**/assets/**" />

      <exclude pattern="phings/**" />
      <exclude pattern="**/phings/**" />

      <exclude pattern="tests/**" />
      <exclude pattern="**/tests/**" />

      <exclude pattern="vendor/**" />
      <exclude pattern="**/vendor/**" />

      <exclude pattern=".sass-cache/**" />
      <exclude pattern="**/.sass-cache/**" />

      <exclude pattern=".post-receive" />
      <exclude pattern="**/.post-receive" />

      <exclude pattern=".drone.yml" />
      <exclude pattern="**/.drone.yml" />

      <exclude pattern=".drone.sec" />
      <exclude pattern="**/.drone.sec" />

      <exclude pattern=".travis.yml" />
      <exclude pattern="**/.travis.yml" />

      <exclude pattern=".travis.bash" />
      <exclude pattern="**/.travis.bash" />

      <exclude pattern=".coveralls.yml" />
      <exclude pattern="**/.coveralls.yml" />

      <exclude pattern=".scrutinizer.yml" />
      <exclude pattern="**/.scrutinizer.yml" />

      <exclude pattern=".build.props" />
      <exclude pattern="**/.build.props" />

      <exclude pattern="build-*.xml" />
      <exclude pattern="**/build-*.xml" />

      <exclude pattern="build.xml" />
      <exclude pattern="**/build.xml" />

      <exclude pattern=".build.php" />
      <exclude pattern="**/.build.php" />

      <exclude pattern=".build.*.php" />
      <exclude pattern="**/.build.*.php" />
    </patternSet>

  </project>
