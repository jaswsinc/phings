<?xml version="1.0" encoding="UTF-8" ?>

<project>

  <!-- ============================================  -->
  <!-- Text-based pattern set. -->
  <!-- Depends on: `_alter_ignore_pattern_set`. -->
  <!-- ============================================  -->

  <patternSet id="_text_based_pattern_set">

    <include pattern="*.php" />
    <include pattern="**/**.php" />

    <include pattern="*.phps" />
    <include pattern="**/**.phps" />

    <include pattern="*.x-php" />
    <include pattern="**/**.x-php" />

    <include pattern="*.html" />
    <include pattern="**/**.html" />

    <include pattern="*.xml" />
    <include pattern="**/**.xml" />

    <include pattern="*.css" />
    <include pattern="**/**.css" />

    <include pattern="*.scss" />
    <include pattern="**/**.scss" />

    <include pattern="*.less" />
    <include pattern="**/**.less" />

    <include pattern="*.ts" />
    <include pattern="**/**.ts" />

    <include pattern="*.js" />
    <include pattern="**/**.js" />

    <include pattern="*.tsx" />
    <include pattern="**/**.tsx" />

    <include pattern="*.jsx" />
    <include pattern="**/**.jsx" />

    <include pattern="*.json" />
    <include pattern="**/**.json" />

    <include pattern="*.json5" />
    <include pattern="**/**.json5" />

    <include pattern="*.yml" />
    <include pattern="**/**.yml" />

    <include pattern="*.bash" />
    <include pattern="**/**.bash" />

    <include pattern="*.txt" />
    <include pattern="**/**.txt" />

    <include pattern="*.md" />
    <include pattern="**/**.md" />

    <include pattern=".htaccess" />
    <include pattern="**/.htaccess" />

  </patternSet>

</project>
