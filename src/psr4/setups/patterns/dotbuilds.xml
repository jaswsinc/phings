<?xml version="1.0" encoding="UTF-8" ?>

  <project>

    <!-- ============================================  -->
    <!-- Dotbuilds pattern set. -->
    <!-- ============================================  -->

    <patternSet id="_dotbuilds_pattern_set">
      <exclude pattern=".~build/**" />
      <exclude pattern="**/.~build/**" />

      <exclude pattern="phings/**" />
      <exclude pattern="**/phings/**" />

      <exclude pattern="vendor/**" />
      <exclude pattern="**/vendor/**" />

      <include pattern=".build.php" />
      <include pattern="**/.build.php" />
    </patternSet>

  </project>
